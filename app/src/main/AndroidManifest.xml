<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kirmi.ks1807">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service android:name="spotifyService">
            <intent-filter>
                <action android:name="com.myapp.spotifyService" />
            </intent-filter>
        </service>

        <receiver android:name=".spotifyActiveReceiver">
            <intent-filter>
                <action android:name="com.spotify.music.active"/>
            </intent-filter>
        </receiver>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CurrentMusic"
            android:screenOrientation="portrait" />
        <activity android:name=".ChangePassword" />
        <activity android:name=".EditUserDetails" />
        <activity android:name=".RegisterSecondPage" />
        <activity android:name=".MusicPlaylists" />
        <activity android:name=".ThePlayList" />
        <activity android:name=".Settings" />
        <activity android:name=".AccountDetails" />
    </application>

</manifest>