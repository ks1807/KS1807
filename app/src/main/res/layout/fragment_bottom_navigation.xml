<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomNavigationOptions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/navbarback"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_Home"
                android:layout_width="36dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                
                android:background="@drawable/homebtnselected"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_Library"
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@drawable/diarybtnnormal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_Profile"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/resourcesbtnnormal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_Progress"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/progressbtnnormal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_Settings"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/settingsbtnnormal" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>