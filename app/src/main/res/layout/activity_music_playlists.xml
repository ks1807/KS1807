<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicPlaylists">

    <LinearLayout
        android:id="@+id/Layout_MusicPlaylist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Text_WelcomePlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/PlaylistPage_Caption"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Text_NoMusicHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/MusicNotListenedCaption"
            android:visibility="gone" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:id="@+id/Layout_MusicHistoryGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Text_HasMusicHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/PlayList_Caption" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <ListView
                android:id="@+id/View_Playlists"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/thumbnail_width" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_AddPlayList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="AddPlaylist"
            android:text="@string/AddPlaylist_Caption" />

        <Button
            android:id="@+id/btn_BackPlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Back"
            android:text="@string/BackButtonCaption" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>