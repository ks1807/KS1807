<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/RadioGroup_EditGenderSelect"
        android:layout_width="315dp"
        android:layout_height="47dp"
        android:background="@drawable/genderback"
        android:checkedButton="@+id/RadioButton_EditMale"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/editText_EditDateOfBirth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_EditEmail">

        <RadioButton
            android:id="@+id/RadioButtonEdit_empty"
            android:layout_width="83dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:button="@null"
            android:paddingEnd="10dp"
            android:paddingStart="10dp" />

        <RadioButton
            android:id="@+id/RadioButton_EditMale"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/maleselected"
            android:button="@null"
            android:onClick="RadioButtonMale" />

        <RadioButton
            android:id="@+id/RadioButton_EditFemale"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/femaleunselected"
            android:button="@null"
            android:onClick="RadioButtonFemale" />

        <RadioButton
            android:id="@+id/RadioButton_EditOther"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/otherunselected"
            android:button="@null"
            android:onClick="RadioButtonOther" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_Edit2"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:minHeight="10dp"
        android:onClick="button_Edit"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/Edit_Caption"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_EditDateOfBirth" />

    <Button
        android:id="@+id/btn_View2"
        android:layout_width="140dp"
        android:layout_height="168dp"
        android:minHeight="10dp"
        android:onClick="button_View"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/View_Caption"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_SubmitEdit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="10dp"
        android:onClick="button_Submit"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/Submit_Caption"
        android:visibility="gone" />

    <EditText
        android:id="@+id/editText_EditDateOfBirth"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="@string/DateOfBirth_Caption"
        android:inputType="date"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_Edit2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RadioGroup_EditGenderSelect" />

    <EditText
        android:id="@+id/editText_EditEmail"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:ems="10"
        android:hint="@string/EmailCaption"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/RadioGroup_EditGenderSelect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_EditLastName" />

    <EditText
        android:id="@+id/editText_EditLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/LNameCaption"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/editText_EditEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_EditFirstName" />

    <EditText
        android:id="@+id/editText_EditFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/FNameCaption"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/editText_EditLastName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_YourProfile" />

    <TextView
        android:id="@+id/text_YourProfile"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/YourProfile_Caption"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editText_EditFirstName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>