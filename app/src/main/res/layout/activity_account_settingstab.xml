<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="17dp" />

    <TextView
        android:id="@+id/text_EditRecommendations"
        android:layout_width="299dp"
        android:layout_height="29dp"
        android:text="@string/RecommendationsSetting_Caption"
        android:textAlignment="center"
        android:textSize="14sp" />

    <ToggleButton
        android:id="@+id/toggleButton_AutoMakeRecommendations"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="ToggleButton"
        android:textOff="@string/No_Caption"
        android:textOn="@string/Yes_Caption" />

    <TextView
        android:id="@+id/text_FrequencyOfMoodAlerts"
        android:layout_width="273dp"
        android:layout_height="28dp"
        android:text="@string/MoodFrequencyAlertSettings_Caption"
        android:textAlignment="center"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/Layout_Spinner"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <Spinner
            android:id="@+id/Spinner_AlertFrequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_SubmitSettings2"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:minHeight="10dp"
        android:onClick="button_Submit"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/Submit_Caption" />

</LinearLayout>