<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backnightnature3"
    tools:context=".CurrentMusic">

    <LinearLayout
        android:id="@+id/Layout_MusicHistory"
        android:layout_width="0dp"
        android:layout_height="435dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Text_WelcomeUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/WelcomeUserDefaultCaption"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Text_NoMusicHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/MusicNotListenedCaption"
            android:visibility="gone" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:id="@+id/Layout_MusicHistoryGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Text_HasMusicHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/MusicHistory_Caption" />

            <TextView
                android:id="@+id/Text_TrackName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/TrackName_Caption"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Text_TrackNameDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Text_TrackGenre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/TrackGenre_Caption"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Text_TrackGenreDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Text_TrackArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/TrackArtist_Caption"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Text_TrackArtistDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Text_TrackLength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/TrackLength_Caption"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Text_TrackLengthDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Text_TrackMoodBefore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/MoodBefore_Caption"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Text_TrackMoodBeforeDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Text_TrackMoodAfter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/MoodAfter_Caption"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Text_TrackMoodAfterDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout_MusicButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_Play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:onClick="button_Play"
                android:text="@string/Play_Caption" />

            <Button
                android:id="@+id/btn_Pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:onClick="button_Pause"
                android:text="@string/Pause_Caption" />

            <Button
                android:id="@+id/btn_Skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="5dp"
                android:onClick="button_Skip"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="@string/Skip_Caption" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_ViewPlaylists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="10dp"
            android:onClick="button_ViewPlaylists"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/ViewPlaylists_Caption" />

        <Button
            android:id="@+id/btn_AccountDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/AccountDetails_Caption"
            android:onClick="button_EditAccountDetails"/>

        <Button
            android:id="@+id/btn_Logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="10dp"
            android:onClick="button_Logout"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/Logout_Caption" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"/>

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                app:menu="@layout/login_bottom_tool_bar" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>